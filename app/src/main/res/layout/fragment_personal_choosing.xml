<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.offerCreation.PersonalChoosingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите автомобиль для перевозки"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <RadioGroup
        android:id="@+id/car_selection_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/medium_weight_car_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:button="@null"
            android:background="@drawable/radio_button_selected"
            android:layout_weight="0.5"
            android:layout_marginEnd="10dp"
            android:text="Hyundai Mighty"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/light_weight_car_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:button="@null"
            android:background="@drawable/radio_button_selected"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:text="Lada Granta"
            android:gravity="center"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Укажите количество грузчиков"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <SeekBar
            android:id="@+id/loader_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/loader_seek_bar"
            android:max="3"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>