<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/offer_short_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:hint="item quantity"/>

        <TextView
            android:id="@+id/offer_short_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_short_quantity"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:hint="from"/>

        <TextView
            android:id="@+id/offer_short_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_short_quantity"
            android:layout_toEndOf="@id/offer_short_from"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:hint="to"/>

        <TextView
            android:id="@+id/offer_short_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/offer_short_quantity"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Oriented time"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/offer_short_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_info_24"
        android:layout_gravity="center_vertical"
        android:padding="10dp"/>

</LinearLayout>