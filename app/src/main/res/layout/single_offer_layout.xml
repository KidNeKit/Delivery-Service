<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/offer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="name"/>

    <TextView
        android:id="@+id/offer_first_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offer_name"
        android:hint="from"/>

    <TextView
        android:id="@+id/offer_second_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/offer_first_point"
        android:layout_below="@id/offer_name"
        android:hint="to"/>

    <TextView
        android:id="@+id/offer_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/offer_name"
        android:hint="size" />

    <TextView
        android:id="@+id/offer_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:hint="status"/>
</RelativeLayout>